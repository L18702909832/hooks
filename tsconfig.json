{
  "compilerOptions": {
    "target": "esNext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "strictNullChecks": true
  },
  "exclude": ["node_modules/**", "lib", "es", "dist", "**/__tests__", "**/__test__", "**/demo"]
}
